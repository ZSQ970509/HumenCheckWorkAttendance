<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.humencheckworkattendance.ui.activity.TakeIdNumCameraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/frameLayout_Camera_IdNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.humencheckworkattendance.widget.CameraSurfaceView
                android:id="@+id/cameraSurfaceView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal"></LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="@dimen/x180"
                    android:layout_height="@dimen/y180"
                    android:layout_below="@+id/linearLayout_CameraBold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y340"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_TakePhote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayout7"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/inserthumencameraphoto" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_CameraBold"
                    android:layout_width="@dimen/x640"
                    android:layout_height="@dimen/y480"
                    android:orientation="horizontal"
                    android:layout_below="@+id/imageView_Back"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y142">

                    <ImageView
                        android:id="@+id/imageView_CameraBold"
                        android:layout_width="@dimen/x640"
                        android:layout_height="@dimen/y480"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/inserthumencamerabold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView_Back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginTop="@dimen/y76"
                    app:srcCompat="@drawable/historyback" />

            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>


</LinearLayout>
