<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.humencheckworkattendance.ui.activity.TakeIdNumCameraActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.humencheckworkattendance.widget.CameraSurfaceIdBackView
            android:id="@+id/cameraSurfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imageView_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginTop="@dimen/y76"
            app:srcCompat="@drawable/historyback" />

        <ImageView
            android:id="@+id/imageView_CameraBold"
            android:layout_width="@dimen/x640"
            android:layout_height="@dimen/y480"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/inserthumencamerabold" />


        <ImageView
            android:id="@+id/imageView_TakePhote_port"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y180"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/imageView_CameraBold"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y40"
            app:srcCompat="@drawable/inserthumencameraphoto" />

        <ImageView
            android:id="@+id/imageView_TakePhote_land"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y180"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/y80"
            android:layout_toRightOf="@id/imageView_CameraBold"
            android:visibility="gone"
            app:srcCompat="@drawable/inserthumencameraphoto" />
    </RelativeLayout>

</LinearLayout>
