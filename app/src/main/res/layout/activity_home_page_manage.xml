<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/singbackground"
    tools:context="com.example.humencheckworkattendance.ui.activity.HomePageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y128"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/textView_UserName_Manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="郑书强"
                android:textColor="#ffffff"
                android:textSize="@dimen/y48"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y200"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y28"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_page_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/signheader" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/x280"
            android:layout_height="@dimen/y280"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y157"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_page_manager_inserthumen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/homepagemanaageinserthumen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/x600"
            android:layout_height="@dimen/y100"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y120"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/home_page_manager_examine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/homepageexamine" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y120"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/home_page_examine_short"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/homepageexamineshort" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/home_page_play_card_today"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/homepageplaycardtoday" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/y20"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="@dimen/x600"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="版本：V1.0.171120（Beta）"
                android:textColor="#ffffff"
                android:textSize="@dimen/y30"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
