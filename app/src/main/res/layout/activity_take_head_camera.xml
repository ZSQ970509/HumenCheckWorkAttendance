<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.humencheckworkattendance.ui.activity.TakeIdNumCameraActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#58befc"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_Back"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y48"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x24"
            app:srcCompat="@drawable/historyback" />

        <ImageView
            android:id="@+id/imageView_Camera_Change"
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/y48"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x554"
            android:layout_toEndOf="@+id/imageView_Back"
            android:layout_toRightOf="@+id/imageView_Back"
            app:srcCompat="@drawable/uploadheadchange" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Ll_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y914"
        android:background="@android:color/black"
        android:gravity="center_horizontal">

        <FrameLayout
            android:id="@+id/fl_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.humencheckworkattendance.widget.CamearSurfaceChangeView
                android:id="@+id/cameraSurfaceView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/uploadheadbold" />
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_TakeHeadPhoto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/inserthumencameraphoto"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>
