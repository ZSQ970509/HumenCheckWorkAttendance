<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#58befc"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_Back"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y48"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x24"
            app:srcCompat="@drawable/historyback" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="添加人员"
            android:textColor="#ffffff"
            android:textSize="@dimen/y48"
            app:srcCompat="@drawable/historyback" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y902"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x34"
                android:paddingRight="@dimen/x34">

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="@dimen/y220"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="身份证号"
                        android:textColor="#595959"
                        android:textSize="@dimen/y50" />

                    <EditText
                        android:id="@+id/editText_Insert_IdNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ems="10"
                        android:hint="请输入身份证号"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:textColor="#595959"
                        android:textColorHint="#c9c9c9"
                        android:textSize="@dimen/y50" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_gravity="center"
                    android:background="#bfbfbf"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="@dimen/y220"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="姓名"
                        android:textColor="#595959"
                        android:textSize="@dimen/y50" />

                    <EditText
                        android:id="@+id/editText_Insert_UserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ems="10"
                        android:hint="请输入姓名"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:textColor="#595959"
                        android:textColorHint="#c9c9c9"
                        android:textSize="@dimen/y50">

                        <requestFocus />
                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_gravity="center"
                    android:background="#bfbfbf"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="@dimen/y220"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="部门类型"
                        android:textColor="#595959"
                        android:textSize="@dimen/y50" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/linearLayout_Emtp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/spinner_InsertHumen"
                                android:layout_width="@dimen/x412"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_weight="1"
                                android:hint="请选择部门"
                                android:overlapAnchor="false"
                                android:textColor="#595959"
                                android:textColorHint="#c9c9c9"
                                android:textSize="@dimen/y50" />

                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="@dimen/x50"
                                android:layout_height="@dimen/y50"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/x34"
                                app:srcCompat="@drawable/dropdown" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_gravity="center"
                    android:background="#bfbfbf"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_EmtpRoles"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="@dimen/y220"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="工作岗位"
                        android:textColor="#595959"
                        android:textSize="@dimen/y50" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/linearLayout_LinearLayout_EmtpRoles"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/spinner_InsertHumen_EmtpRoles"
                                android:layout_width="@dimen/x412"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_weight="1"
                                android:hint="请选择工作岗位"
                                android:overlapAnchor="false"
                                android:textColor="#595959"
                                android:textColorHint="#c9c9c9"
                                android:textSize="@dimen/y50" />

                            <ImageView
                                android:id="@+id/imageView19"
                                android:layout_width="@dimen/x50"
                                android:layout_height="@dimen/y50"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/x34"
                                app:srcCompat="@drawable/dropdown" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_EmtpRoles_Line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_gravity="center"
                    android:background="#bfbfbf"
                    android:orientation="horizontal"
                    android:visibility="gone"></LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout9"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="@dimen/y220"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="职称"
                        android:textColor="#595959"
                        android:textSize="@dimen/y50" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/linearLayout_StreamTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/spinner_StreamTitle"
                                android:layout_width="@dimen/x412"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_weight="1"
                                android:hint="请选择职称"
                                android:overlapAnchor="false"
                                android:textColor="#595959"
                                android:textColorHint="#c9c9c9"
                                android:textSize="@dimen/y50" />

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="@dimen/x50"
                                android:layout_height="@dimen/y50"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/x34"
                                app:srcCompat="@drawable/dropdown" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_gravity="center"
                    android:background="#bfbfbf"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="@dimen/y220"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="注册证、岗位证名称及编号"
                        android:textColor="#595959"
                        android:textSize="@dimen/y35"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="243dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/linearLayout_ValidateCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/editText_Insert_ValidateCode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:ems="20"
                                android:hint="请输入信息"
                                android:inputType="textPersonName"
                                android:singleLine="true"
                                android:textColor="#595959"
                                android:textColorHint="#c9c9c9"
                                android:textSize="@dimen/y50" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_gravity="center"
                    android:background="#bfbfbf"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="@dimen/y220"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="性别"
                        android:textColor="#595959"
                        android:textSize="@dimen/y50" />

                    <RadioGroup
                        android:id="@+id/radioGroup_Insert_Sex"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <RadioButton
                            android:id="@+id/radioButton_Men"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:checked="true"
                            android:text="男"
                            android:textColor="#595959"
                            android:textSize="@dimen/y50" />

                        <RadioButton
                            android:id="@+id/radioButton_Women"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="女"
                            android:textColor="#595959"
                            android:textSize="@dimen/y50" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_gravity="center"
                    android:background="#bfbfbf"
                    android:orientation="horizontal"></LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="@dimen/y220"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="手机号"
                        android:textColor="#595959"
                        android:textSize="@dimen/y50" />

                    <EditText
                        android:id="@+id/editText_Insert_Phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ems="10"
                        android:hint="请输入手机号"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:textColor="#595959"
                        android:textColorHint="#c9c9c9"
                        android:textSize="@dimen/y50" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_gravity="center"
                    android:background="#bfbfbf"
                    android:orientation="horizontal"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/y38"
                android:layout_marginTop="@dimen/y38"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageView_Insert_Save"
                        android:layout_width="@dimen/x320"
                        android:layout_height="@dimen/y100"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/inserthumensave" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageView_Insert_Submit"
                        android:layout_width="@dimen/x320"
                        android:layout_height="@dimen/y100"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/inserthumensubmitsave" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>