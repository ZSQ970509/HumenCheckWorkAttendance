<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.humencheckworkattendance.ui.activity.InsertGroupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#58befc"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_Back"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y48"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x24"
            app:srcCompat="@drawable/historyback" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="添加班组"
            android:textColor="#ffffff"
            android:textSize="@dimen/y48"
            app:srcCompat="@drawable/historyback" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="@dimen/x726"
        android:layout_height="@dimen/y110"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginTop="@dimen/y30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="@dimen/y220"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="班组名称"
            android:textColor="#595959"
            android:textSize="@dimen/y40" />

        <EditText
            android:id="@+id/editText_Insert_Group_GroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="请输入班组名称"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:textColor="#595959"
            android:textColorHint="#c9c9c9"
            android:textSize="@dimen/y40" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/x726"
        android:layout_height="@dimen/y2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="@dimen/x24"
        android:background="#bfbfbf"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="@dimen/x726"
        android:layout_height="@dimen/y110"
        android:layout_marginLeft="@dimen/x24"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/y220"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="班组长"
            android:textColor="#595959"
            android:textSize="@dimen/y40" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/spinner_Insert_Group"
                android:layout_width="@dimen/x372"
                android:layout_height="wrap_content"
                android:overlapAnchor="false"
                android:singleLine="true"
                android:textColor="#595959"
                android:textSize="@dimen/y40"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/imageView_InsertHumenAddGroup_Dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/spinner_Insert_Group"
                android:layout_toEndOf="@+id/spinner_Insert_Group"
                android:layout_toRightOf="@+id/spinner_Insert_Group"
                app:srcCompat="@drawable/dropdown" />

            <ImageView
                android:id="@+id/imageView_InsertHumenAddGroup"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/y40"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageView_InsertHumenAddGroup_Dialog"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                app:srcCompat="@drawable/inserthumenaddgroup" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/x726"
        android:layout_height="@dimen/y2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="@dimen/x24"
        android:background="#bfbfbf"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/x600"
        android:layout_height="@dimen/y100"
        android:layout_marginLeft="@dimen/x75"
        android:layout_marginTop="@dimen/y80"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_Insert_Group_Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/inserthumnesubmit" />
    </LinearLayout>
</LinearLayout>
