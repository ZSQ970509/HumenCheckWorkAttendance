<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/month_social_security_small_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="姓名"
            android:textColor="@color/text_color"
            android:textSize="@dimen/y40" />


        <TextView
            android:id="@+id/month_social_security_small_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="是"
            android:textColor="@color/text_color"
            android:textSize="@dimen/y40" />


        <ImageView
            android:id="@+id/month_social_security_small_upload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/y10"
            android:src="@drawable/monthshebaoupload" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#bfbfbf"
        android:orientation="horizontal" />

</LinearLayout>