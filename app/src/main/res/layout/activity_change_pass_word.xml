<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.humencheckworkattendance.ui.activity.ChangePassWordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#58befc"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_Back"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y48"
            android:layout_marginLeft="11dp"
            app:srcCompat="@drawable/historyback"
            android:layout_alignTop="@+id/textview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textColor="#ffffff"
            android:textSize="@dimen/y48"
            app:srcCompat="@drawable/historyback" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="@dimen/x726"
        android:layout_height="@dimen/y110"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="@dimen/y220"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="旧密码"
            android:textColor="#595959"
            android:textSize="@dimen/y40" />

        <EditText
            android:id="@+id/editText_Change_OldPassWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#595959"
            android:textColorHint="#c9c9c9"
            android:textSize="@dimen/y40" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/x726"
        android:layout_height="@dimen/y2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_gravity="center"
        android:background="#bfbfbf"
        android:orientation="horizontal"></LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="@dimen/x726"
        android:layout_height="@dimen/y110"
       android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="@dimen/y220"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="新密码"
            android:textColor="#595959"
            android:textSize="@dimen/y40" />

        <EditText
            android:id="@+id/editText_Change_NewPassWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#595959"
            android:textColorHint="#c9c9c9"
            android:textSize="@dimen/y40" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/x726"
        android:layout_height="@dimen/y2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_gravity="center"
        android:background="#bfbfbf"
        android:orientation="horizontal"></LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="@dimen/x726"
        android:layout_height="@dimen/y110"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="@dimen/y220"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="确认密码"
            android:textColor="#595959"
            android:textSize="@dimen/y40" />

        <EditText
            android:id="@+id/editText_Change_NewPassWord_Again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="请再输入新密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#595959"
            android:textColorHint="#c9c9c9"
            android:textSize="@dimen/y40" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/x726"
        android:layout_height="@dimen/y2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_gravity="center"
        android:background="#bfbfbf"
        android:orientation="horizontal"></LinearLayout>



    <LinearLayout
        android:layout_width="@dimen/x600"
        android:layout_height="@dimen/y100"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y80"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_Change_Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/changepasswordbtn" />
    </LinearLayout>
</LinearLayout>
