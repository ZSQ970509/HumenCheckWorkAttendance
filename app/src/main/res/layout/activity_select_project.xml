<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.humencheckworkattendance.ui.activity.SelectProjectActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#58befc"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_Back"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y48"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x24"
            app:srcCompat="@drawable/historyback" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="选择项目"
            android:textColor="#ffffff"
            android:textSize="@dimen/y48"
            app:srcCompat="@drawable/historyback" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y152"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#f2f2f2">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="项目："
                android:textColor="#595959"
                android:textSize="@dimen/y48" />

            <EditText
                android:id="@+id/select_project_editText"
                android:layout_width="@dimen/x370"
                android:layout_height="@dimen/y72"
                android:background="@drawable/selectprojectsearch"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/x5"
                android:singleLine="true"
                android:hint="请输入关键字"
                android:textColorHint="#c9c9c9"
                android:textColor="#000000"
                android:textSize="@dimen/y48"
                android:layout_alignBaseline="@+id/textView8"
                android:layout_alignBottom="@+id/textView8"
                android:layout_toRightOf="@+id/textView8"
                android:layout_toEndOf="@+id/textView8" />

            <ImageView
                android:id="@+id/select_project_ImageView"
                android:layout_width="@dimen/x150"
                android:layout_height="@dimen/y72"
                app:srcCompat="@drawable/selectprojectsearchbg"
                android:layout_alignTop="@+id/select_project_editText"
                android:layout_toRightOf="@+id/select_project_editText"
                android:layout_marginLeft="@dimen/x24"
                android:layout_toEndOf="@+id/select_project_editText" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/select_project_ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
