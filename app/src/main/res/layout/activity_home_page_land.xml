<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_page_land"
    android:background="@drawable/singbackground_land"
    android:orientation="vertical"
    tools:context="com.example.humencheckworkattendance.ui.activity.HomePageActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/y10"
        android:layout_height="@dimen/y58">

        <TextView
            android:id="@+id/textView_UserName_land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="郑书强"
            android:textColor="#ffffff"
            android:textSize="@dimen/y48"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView_Histroy_land"
            android:layout_width="@dimen/y48"
            android:layout_height="@dimen/y48"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x40"
            app:srcCompat="@drawable/homepagedialog" />

        <RelativeLayout
            android:id="@+id/relativeLayout_ViewHolder_land"
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/y48"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x40"
            android:visibility="gone">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_Insert_Humen_land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/x48"
                android:layout_height="@dimen/y48"
                android:layout_marginLeft="@dimen/x40"
                app:srcCompat="@drawable/signaddhumen" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/x166"
        android:layout_height="@dimen/y166"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_page_head_land"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/signheader" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_Map_land"
        android:layout_width="@dimen/x502"
        android:layout_height="@dimen/y40"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y10"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2_land"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/signaddress" />

        <TextView
            android:id="@+id/home_page_addresss_land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxEms="18"
            android:singleLine="true"
            android:text="暂无地区信息"
            android:textColor="#808080"
            android:textSize="@dimen/y30"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3_land"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/singright" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView_land"
            android:layout_width="@dimen/x600"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="版本：V1.0.171212（Beta）"
            android:textColor="#ffffff"
            android:textSize="@dimen/y30"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/y20"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/home_page_sign_land"
            android:layout_width="@dimen/x600"
            android:layout_height="@dimen/y80"
            android:layout_above="@id/textView_land"
            app:srcCompat="@drawable/signsign_land"
            android:layout_marginBottom="@dimen/y20"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/home_page_camera_land"
            android:layout_width="@dimen/x210"
            android:layout_height="@dimen/y210"
            android:layout_above="@id/home_page_sign_land"
            android:src="@drawable/signcamera"
            android:layout_marginBottom="@dimen/y20"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>
