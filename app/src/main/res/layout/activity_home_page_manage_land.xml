<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_page_manage_land"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepagebackground_land"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView_UserName_Manage_land"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y58"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y10"
        android:gravity="center"
        android:singleLine="true"
        android:text="郑书强"
        android:textColor="#ffffff"
        android:textSize="@dimen/y48"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="@dimen/x166"
        android:layout_height="@dimen/y166"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y28"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_page_head_land"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/signheader" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView_land"
            android:layout_width="@dimen/x600"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y10"
            android:gravity="center"
            android:text="版本：V1.0.171212（Beta）"
            android:textColor="#ffffff"
            android:textSize="@dimen/y30"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/home_page_manage_btn_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_above="@id/textView_land"
            android:layout_marginBottom="@dimen/y40"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_page_examine_short_land"
                android:layout_width="@dimen/x330"
                android:layout_height="@dimen/y100"
                android:src="@drawable/homepageexamineshort_land" />

            <ImageView
                android:id="@+id/home_page_manager_examine_land"
                android:layout_width="@dimen/x330"
                android:layout_height="@dimen/y100"
                android:layout_marginLeft="@dimen/x44"
                android:src="@drawable/homepageexamine"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/home_page_play_card_today_land"
                android:layout_width="@dimen/x330"
                android:layout_height="@dimen/y100"
                android:layout_marginLeft="@dimen/x44"
                android:src="@drawable/homepageplaycardtoday_land" />

            <ImageView
                android:id="@+id/home_page_month_social_security_land"
                android:layout_width="@dimen/x330"
                android:layout_height="@dimen/y100"
                android:layout_marginLeft="@dimen/x44"
                android:src="@drawable/homepagemanagemonthshebao_land" />
        </LinearLayout>

        <ImageView
            android:id="@+id/home_page_manager_inserthumen_land"
            android:layout_width="@dimen/x210"
            android:layout_height="@dimen/y210"
            android:layout_above="@id/home_page_manage_btn_ll"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y32"
            android:src="@drawable/homepagemanaageinserthumen" />
    </RelativeLayout>
</LinearLayout>
